<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:raw file="parts/gtm.txt"/>
			<header>
				<cms:mobile>
					<div class="floating_header">
						<!-- Logo -->
						<a href="#top" class="logo">
							<cms:svg file="logo.svg" />
						</a>

						<!-- Phone link -->
						<a
							href="'tel:'.urlencode(Language::get_text('phone1'))"
							cms:eval="href"
							class="phone"
							>
							<cms:svg file="icons/icon-phone-green.svg"/>
						</a>
					</div>
				</cms:mobile>

				<!-- Main header information -->
				<div class="header_information">
					<a href="#top" class="logo">
						<cms:svg file="logo.svg" />
					</a>

					<cms:module
						name="articles"
						action="show"
						text_id="header"
						template="stock/article_generic.xml"
						>
						<param name="title_tag" value="h1"/>
						<param name="title" value=""/>
					</cms:module>

					<!-- Phone link -->
					<a
						href="'tel:'.urlencode(Language::get_text('phone1'))"
						cms:eval="href"
						class="phone"
						>
						<span><cms:text constant="phone_title"/></span>
						<cms:text constant="phone1"/>
					</a>

					<!-- Contact form -->
					<div class="form_container">
						<h2><cms:text constant="form_title"/></h2>
						<cms:module
							name="contact_form"
							action="show"
							text_id="contact_form"
							/>
					</div>
				</div>
			</header>

			<div class="procedure">
				<cms:module
					name="articles"
					action="show"
					text_id="procedure_article"
					template="parts/article.xml"
					/>

				<div class="video_container">
					<cms:module
						name="youtube"
						action="show"
						text_id="optimal_video"
						template="parts/video.xml"
						/>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article_heading.xml"
					/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="treatment_group"
					template="parts/show_articles.xml"
					/>
			</div>

			<cms:desktop>
				<div class="bottom">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_article"
						template="parts/article.xml"
						/>

					<span><cms:text constant="form_title2"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</cms:desktop>
			<cms:mobile>
				<div class="bottom">
					<cms:module
						name="articles"
						action="show"
						text_id="footer_article"
						template="parts/article.xml"
						/>
				</div>

				<div class="form_bottom">
					<span><cms:text constant="form_title2"/></span>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</cms:mobile>

			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>
		</body>
	</html>
</document>
